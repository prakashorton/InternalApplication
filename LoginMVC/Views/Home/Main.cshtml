                                        <div class="col-sm-10">
                                            <input class="form-control"
                                                   id="app-environment"
                                                   type="text"
                                                   disabled>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Provider</label>
                                        <div class="col-sm-10">
                                            <input class="form-control"
                                                   id="app-provider"
                                                   type="text"
                                                   disabled>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Server</label>
                                        <div class="col-sm-10">
                                            <input class="form-control"
                                                   id="app-server"
